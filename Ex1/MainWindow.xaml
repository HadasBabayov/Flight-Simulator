<Window x:Class="Ex1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex1"
        mc:Ignorable="d"
        Title="FlightGearApp" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="291*"/>
            <ColumnDefinition Width="503*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Fly!" Background="DeepSkyBlue" HorizontalAlignment="Left" Margin="79,55,0,0" VerticalAlignment="Top"
                Width="75" Click="Fly_Button_Click" Height="20"/>
        <Button Content="Stop Flight" Background="DeepSkyBlue" HorizontalAlignment="Left" Margin="79,110,0,0" VerticalAlignment="Top"
                Width="75" RenderTransformOrigin="-0.171,0.45"
                Click="Stop_Flight_Click" Height="20"/>
        <Button Content="Close Connection and Exit" HorizontalAlignment="Left" Margin="79,215,0,0" VerticalAlignment="Top" Width="167" Height="75" Click="Close_Connection_Click"/>
        <Button Content="Start Flight Over" Background="DeepSkyBlue" HorizontalAlignment="Left" Margin="79,168,0,0" VerticalAlignment="Top" Width="130" Click="Start_Flight_Over_Click" Height="20"/>

    </Grid>
</Window>
