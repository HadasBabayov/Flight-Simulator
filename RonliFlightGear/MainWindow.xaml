        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="windows/airplane.jpg"/>
        </Grid.Background>

        <Button Content="settings" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="348,391,0,0" Click="Click_sttings"/>
        <Label Content="Welcome!" HorizontalAlignment="Left" Height="49" Margin="295,0,0,0" VerticalAlignment="Top" Width="185" FontSize="30" FontWeight="Bold" FontFamily="Lucida Handwriting"/>
